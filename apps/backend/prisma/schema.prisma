model PlayerCoachNote {
  id        String   @id @default(cuid())
  playerId  String
  note      String   // Coach's note text
  createdAt DateTime @default(now())
  player    User     @relation("PlayerCoachNotes", fields: [playerId], references: [id], onDelete: Cascade)

  @@index([playerId])
  @@index([createdAt])
}

