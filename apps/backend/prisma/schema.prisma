generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  COACH
  PLAYER
}

enum Position {
  KALECI
  DEFANS
  ORTA_SAHA
  FORVET
}

enum DrillCategory {
  WARM_UP
  TECHNICAL
  TACTICAL
  COOL_DOWN
}

enum Phase {
  WARM_UP
  TECHNICAL
  TACTICAL
  COOL_DOWN
}

enum AgeGroup {
  U8
  U10
  U12
  U14
  U16
  U18
  SENIOR
}

enum AttendanceStatus {
  PRESENT
  ABSENT
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

enum TeamCategory {
  ALT_YAPI
  A_TAKIM
}

model User {
  id           String    @id @default(cuid())
  name         String
  email        String    @unique
  passwordHash String
  role         UserRole
  position     Position? // Oyuncu mevkisi
  birthDate    DateTime? // DoÄŸum tarihi
  club         Club?     @relation(fields: [clubId], references: [id])
  clubId       String?
  groups       GroupMember[]
  coachedPlans TrainingPlan[]
  attendances  Attendance[]
  seasonsCreated Season[]  @relation("SeasonCreator")
  playerLoads    PlayerLoad[] @relation("PlayerLoads")
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Club {
  id          String        @id @default(cuid())
  name        String
  logo        String?
  description String?
  users       User[]
  groups      PlayerGroup[]
  plans       TrainingPlan[]
  seasons     Season[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model PlayerGroup {
  id        String        @id @default(cuid())
  name      String
  club      Club          @relation(fields: [clubId], references: [id])
  clubId    String
  ageGroup  AgeGroup
  category  TeamCategory  @default(ALT_YAPI)
  members   GroupMember[]
  sessions  TrainingPlan[] @relation("GroupPlans")
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model GroupMember {
  id        String       @id @default(cuid())
  user      User         @relation(fields: [userId], references: [id])
  userId    String
  group     PlayerGroup  @relation(fields: [groupId], references: [id])
  groupId   String
  createdAt DateTime     @default(now())
}

model Drill {
  id          String        @id @default(cuid())
  title       String
  category    DrillCategory
  ageGroup    AgeGroup
  durationMin Int
  difficulty  Difficulty
  equipment   String?
  jsonData    Json
  imageUrl    String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  plans       PlanDrill[]
}

model TrainingPlan {
  id            String       @id @default(cuid())
  title         String
  club          Club         @relation(fields: [clubId], references: [id])
  clubId        String
  coach         User         @relation(fields: [coachId], references: [id])
  coachId       String
  totalDuration Int          @default(0)
  drills        PlanDrill[]
  group         PlayerGroup? @relation("GroupPlans", fields: [groupId], references: [id])
  groupId       String?
  date          DateTime?
  dayPlans      DayPlan[]    // Link to DayPlan
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  attendance    Attendance[]
}

model PlanDrill {
  id            String        @id @default(cuid())
  trainingPlan  TrainingPlan  @relation(fields: [trainingPlanId], references: [id])
  trainingPlanId String
  drill         Drill         @relation(fields: [drillId], references: [id])
  drillId       String
  phase         Phase
  order         Int           @default(0)
  notes         String?
}

model Attendance {
  id        String       @id @default(cuid())
  player    User         @relation(fields: [playerId], references: [id])
  playerId  String
  plan      TrainingPlan @relation(fields: [planId], references: [id])
  planId    String
  status    AttendanceStatus
  createdAt DateTime     @default(now())
}

// Season Planning Models - Simplified Weekly Calendar Approach
model Season {
  id          String   @id @default(cuid())
  name        String
  club        Club?    @relation(fields: [clubId], references: [id])
  clubId      String?
  startDate   DateTime
  endDate     DateTime
  createdBy   User     @relation("SeasonCreator", fields: [userId], references: [id])
  userId      String
  weeks       WeekPlan[]
  matches     Match[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum DayType {
  TRAINING
  MATCH
  REST
  RECOVERY
  TACTICAL
}

model WeekPlan {
  id          String   @id @default(cuid())
  season      Season   @relation(fields: [seasonId], references: [id], onDelete: Cascade)
  seasonId    String
  weekNumber  Int      // 1-52
  startDate   DateTime
  endDate     DateTime
  notes       String?
  totalLoad   Int      @default(0) // Weekly training load (0-100)
  days        DayPlan[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([seasonId, weekNumber])
}

model DayPlan {
  id            String        @id @default(cuid())
  week          WeekPlan      @relation(fields: [weekId], references: [id], onDelete: Cascade)
  weekId        String
  dayOfWeek     Int           // 1-7 (Monday-Sunday)
  date          DateTime
  type          DayType       @default(TRAINING)
  title         String?
  trainingPlan  TrainingPlan? @relation(fields: [trainingPlanId], references: [id])
  trainingPlanId String?      // Link to TrainingPlan
  drillIds      Json?         // ["drill1", "drill2"]
  duration      Int?          // minutes
  intensity     Int?          // 1-10
  notes         String?
  completed     Boolean       @default(false)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}
}

model Match {
  id              String   @id @default(cuid())
  season          Season   @relation(fields: [seasonId], references: [id], onDelete: Cascade)
  seasonId        String
  date            DateTime
  opponent        String
  location        String   // HOME, AWAY
  competition     String?  // League, Cup, Friendly
  result          String?  // 3-1, 2-2, etc
  opponentAnalysis Json?   // { formation: "", strengths: [], weaknesses: [] }
  ourFormation    String?
  notes           String?
  videoLinks      Json?    // [{ title: "", url: "" }]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model PlayerLoad {
  id             String   @id @default(cuid())
  player         User     @relation("PlayerLoads", fields: [playerId], references: [id])
  playerId       String
  date           DateTime
  totalDistance  Float    @default(0)
  hsr            Float    @default(0) // High Speed Running
  sprintDistance Float    @default(0)
  accelerations  Int      @default(0)
  wellness       Json?    // { sleep: 1-5, fatigue: 1-5, soreness: 1-5, stress: 1-5 }
  createdAt      DateTime @default(now())
}

